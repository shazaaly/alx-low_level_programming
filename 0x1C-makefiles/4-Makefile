CC=gcc
SRC= main.c school.c
OBJ=$(SRC:.c=.o)
NAME=school
RM= rm -f
CFLAGS=-Wall -Werror -Wextra -pedantic

all: $(NAME)
$(NAME): $(OBJ)
$(CC) $(SRC) -o $(NAME)

clean:
$(RM) \*~ $(NAME)

#oclean: deletes the object files

oclean:
$(RM) $(OBJ)

##fclean: deletes all Emacs and Vim temporary files, the executable, and the object files

fclean:
clean oclean
re:
fclean all
